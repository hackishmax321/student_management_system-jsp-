<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>SessionFilter</filter-name>
        <filter-class>LoginReg.logout.SessionFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SessionFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>RegServlet</servlet-name>
        <servlet-class>LoginReg.RegServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpServe</servlet-name>
        <servlet-class>LoginReg.UpServe</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>LoginReg.logout.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChatServlet</servlet-name>
        <servlet-class>Chatting.ChatServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SendEvent</servlet-name>
        <servlet-class>Events.SendEvent</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddComment</servlet-name>
        <servlet-class>Comment.AddComment</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddServe</servlet-name>
        <servlet-class>Comment.AddServe</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SendAnnouncement</servlet-name>
        <servlet-class>Anouncement.SendAnnouncement</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddReply</servlet-name>
        <servlet-class>Comment.AddReply</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegServlet</servlet-name>
        <url-pattern>/RegServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpServe</servlet-name>
        <url-pattern>/UpServe</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChatServlet</servlet-name>
        <url-pattern>/ChatServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SendEvent</servlet-name>
        <url-pattern>/SendEvent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddComment</servlet-name>
        <url-pattern>/AddComment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddServe</servlet-name>
        <url-pattern>/AddServe</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SendAnnouncement</servlet-name>
        <url-pattern>/SendAnnouncement</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddReply</servlet-name>
        <url-pattern>/AddReply</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            5
        </session-timeout>
    </session-config>
</web-app>
